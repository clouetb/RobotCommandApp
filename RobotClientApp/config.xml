<?xml version='1.0' encoding='utf-8'?>
<widget id="eu.bclouet.robot.client.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Robot</name>
    <description>
        Robot command application for mobile and browser usage.
    </description>
    <author email="benoit.clouet@gmail.com" href="https://github.com/clouetb/RobotCommandApp">
        Beno√Æt Clouet
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
		<preference name="Orientation" value="all" />
    </platform>
	<preference name="Fullscreen" value="true" />
	<preference name="DisallowOverscroll" value="true"/>
</widget>
